---
interface Props {
  n: number;
  title: string;
  description: string;
}

const { n, title, description } = Astro.props;
---

<div class="flex flex-col">
  <span class="flex h-10 w-10 items-center justify-center rounded-full bg-accent text-sm font-bold text-black">
    {n}
  </span>
  <h3 class="mt-4 text-lg font-semibold">{title}</h3>
  <p class="mt-2 text-sm leading-relaxed text-neutral-400">{description}</p>
</div>
