---
interface Props {
  items: string[];
}

const { items } = Astro.props;
---

<ul class="space-y-4">
  {items.map((item) => (
    <li class="flex items-start gap-3">
      <svg class="mt-1 h-5 w-5 shrink-0 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
      </svg>
      <span class="text-neutral-300">{item}</span>
    </li>
  ))}
</ul>
