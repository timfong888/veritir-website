---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="rounded-xl border border-border bg-muted p-6">
  <h3 class="text-lg font-semibold">{title}</h3>
  <p class="mt-3 text-sm leading-relaxed text-neutral-400">{description}</p>
</div>
